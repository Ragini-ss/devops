echo "Enter option 1 to mount or 2 for unmount NFS share"
read option
echo "Directory name to be created or deleted"
        read dir

if [ $option -eq 1 ]; then

	echo "Enter the tsm ip"
	read ip
	test=`showmount -e $ip |cut -d ":" -f 2|cut -d " " -f 1` 
	i=1
	#echo "Directory name to be created"
	#read dir
#	folder=${dir}${i}
	for a in ${test};do

		folder=${dir}${i}
  		echo "cool = $a"
  		echo $folder
  		mkdir /mnt/$folder
  		i=$(( ${i} + 1 ))
  		mount -o vers=3 $ip:$a /mnt/$folder

  		#i=$(( ${i} + 1 ))
  		echo "test = $i"
  		#i++
	done
else

	directory=`ls /mnt/ | grep $dir` 
	for b in ${directory};do
		umount -l /mnt/$b
		rmdir /mnt/$b
	done
fi
