echo "Select the following options"
echo "1 for NFS mount"
echo "2 for ISCSI volume login"
read option

if [ $option -eq 1 ]; then
	echo "Select host type for nfs mount Linux or ESX "
	echo "1 for Linux"
	echo "2 for ESX"
	echo "3 for Citrix"
	read hosttype
	if [ $hosttype -eq 1 ]; then
		
		sh redhatnfsmount
	
	elif [ $hosttype -eq 2 ]; then
	
		sh esxnfs
	else
		echo "Enter Citrix IP Address"
		read ip
		scp citrixnfs root@$ip:/root/
		ssh root@$ip sh /root/citrixnfs
	fi
else
		sh iscsi.sh
fi
